<section>
  <div class="banner-wrapper">
    {%- if section.settings.image != blank -%}
      <div class="one-user">
        <h1></h1>
      </div>
    {%- else -%}
      <div class="one">
        <h1></h1>
      </div>
    {%- endif -%}
    {%- if section.settings.image2 != blank -%}
      <div class="two-user">
        <h1></h1>
      </div>
    {%- else -%}
      <div class="two">
        <h1></h1>
      </div>
    {%- endif -%}
    {%- if section.settings.image3 != blank -%}
      <div class="three-user">
        <h1></h1>
      </div>
    {%- else -%}
      <div class="three">
        <h1></h1>
      </div>
    {%- endif -%}
  </div>
</section>

<style>
  .banner-wrapper {
    display: flex;
  }

  .one {
    background-image: url("{{ 'banner4.jpg' | asset_url }}");
    width: 33.333%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }
  .one-user {
    background-image: url("{{ section.settings.image | image_url }}");
    width: 33.333%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }
  .two {
    background-image: url("{{ 'banner2.jpg' | asset_url }}");
    width: 33.333%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }
  .two-user {
    background-image: url("{{ section.settings.image2 | image_url }}");
    width: 33.333%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }
  .three {
    background-image: url("{{ 'banner3.jpg' | asset_url }}");
    width: 33.333%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }
  .three-user {
    background-image: url("{{ section.settings.image3 | image_url }}");
    width: 33.333%;
    height: 500px;
    background-size: cover;
    background-position: center;
  }

  @media (max-width: 1024px) {
    .one, .one-user, .two, .two-user, .three, .three-user {
      width: 50%;
      height: 400px;
    }
  }

  @media (max-width: 768px) {
    .one, .one-user, .two, .two-user, .three, .three-user {
      width: 100%;
      height: 300px;
    }
  }

  @media (max-width: 480px) {
    .one, .one-user, .two, .two-user, .three, .three-user {
      width: 100%;
      height: 250px;
    }
  }
</style>

