<header class="header-nav">
   <div class="left-nav-items">
    <a href = "/">
        <img
        height="50"
        width="80"
        loading="lazy"
        src = "{{ 'logo.png' | asset_url}}">
    </a>    
    </div>

    <div class ="middle-nav-bar">
    {% for link in linklists['main-menu'].links %}
        <li>
            {{ link.title | link_to: link.url }}
        </li>            
    {% endfor %}    
    </div>

    <div class="right-nav-items">
      <form action="/search">
      <input class="search-nav" placeholder="search" type="search">
      </form> 
    </div>    
</header>   

<style>
  @import url('https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100..900;1,100..900&display=swap');

  .header-nav{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0;
    padding: 0 30px 0 30px;
    background-color: #cda858;
    position: sticky;
  }
 
  .middle-nav-bar{
    display: flex;
    justify-content: center;
    align-items: center;
    list-style-type: none;
    font-size: 17px;
    font-family: "Raleway", sans-serif;
    font-style: italic;
    font-weight: 400;
  }
 
  .middle-nav-bar a{
    color: inherit;
    text-decoration: none;
    padding-right: 30px;
  }
 
 .right-nav-items{
    display: flex;
    justify-content: center;
    align-items: center;
 }
 
 .search-nav{
     padding: 7px;
     margin-top: 12px;
     margin-right: 4px;
     border-radius: 8px;
     border: none;
     background-color: rgb(219, 215, 215);
 }
    
</style>    